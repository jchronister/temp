def app

pipeline {
    agent any
environment {
    dockerImage = ''
}

    stages {

        stage('Build image') {
          steps {
            // sh "docker version"
            echo 'testing'
            // dir("finch-backend/greeting-service") {
            // sh "docker build -t greeting-service:${BUILD_NUMBER} ."
            // }
            script {
            dockerImage = docker.build("finch-backend/greeting-service:${BUILD_NUMBER}")
            }
         
          }
        }

        stage('echo') {
          steps {
             sh 'docker -v'
          }
        }
        
             stage('Deploy image') {
         steps{
            script{
                 docker.withRegistry("$awsECR", 'ecr:us-east-1:jrc-ecr') {
                     dockerImage.push()
                 }
             }
         }
     }
        
        
        
        
        
        
        
        
        

    }
}

def cmd(command) {
  dir("finch-backend") {
    sh command
  }
}




